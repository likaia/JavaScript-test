{
    "exclude": [
        "./node_modules"
    ],
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "outDir": "./dist/ts",
        "target": "es6",
        "strict": true,
        "module": "es2015",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true
    },
    "include": ["src/**/lib/*"]
}
